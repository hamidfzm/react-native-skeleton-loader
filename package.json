{
  "name": "@hamidfzm/react-native-skeleton-loader",
  "version": "0.1.0",
  "description": "Simple skeleton loaders for React Native",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "prepare": "bob build",
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn"
  },
  "keywords": [
    "react",
    "react-native",
    "react native",
    "ios",
    "android",
    "web",
    "windows",
    "macOS",
    "skeleton",
    "loading",
    "pulse"
  ],
  "repository": "https://github.com/hamidfzm/react-native-skeleton-loader",
  "author": "Hamid FzM <hamidfzm@gmail.com> (https://github.com/hamidfzm)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hamidfzm/react-native-skeleton-loader/issues"
  },
  "homepage": "https://github.com/hamidfzm/react-native-skeleton-loader#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.10.1",
    "@react-native-community/eslint-config": "^0.0.7",
    "@release-it/conventional-changelog": "^1.1.0",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.61.10",
    "commitlint": "^8.3.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "react": "~16.9.0",
    "react-native": "~0.61.5",
    "release-it": "^12.6.3",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": ">= 16.3.2",
    "react-native": ">= 0.58.2"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "example/web-build"
  ],
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release %s",
      "tagName": "v%s"
    },
    "npm": {
      "publish": true,
      "access": "public"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
